<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<context id="MySQLTables" targetRuntime="MyBatis3">
		<!--抑制注释生成，不生成注释 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<!-- mvn mybatis-generator:generate 配置数据库位置 ，配置虚拟机上的mysql ip地址；不采用安全协议连接，否则无法逆向生成 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://192.168.163.129:3306/atcrowdfunding?useSSL=false"
			userId="root" password="root">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- javaBean生成在哪里 -->
		<javaModelGenerator
			targetPackage="com.dragon.scw.order.bean"
			targetProject="..\scw-order\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- sqlMap sql映射文件（xml mapper文件） -->
		<sqlMapGenerator targetPackage="mybatis.mapper"
			targetProject="..\scw-order\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- javaClient：java接口生成的地方 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.dragon.scw.order.mapper"
			targetProject="..\scw-order\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!-- <table schema="" tableName="%"></table> -->
		<table tableName="t_order"></table>
		<table tableName="t_transaction"></table>


	</context>
</generatorConfiguration> 